# Copy this file to .env and fill in your values
# Variables prefixed with VITE_ are exposed to the frontend

# App Configuration
VITE_APP_NAME=Tauri App
VITE_APP_VERSION=0.1.0

# API Configuration
VITE_API_URL=http://localhost:3000/api

# Debug Mode
VITE_DEBUG=true

# Authentication Mode: "none" | "jwt"
# "none" — no authentication, app loads directly
# "jwt"  — enables JWT auth with login page and route protection
# Changing this requires a dev server restart.
VITE_AUTH_MODE=none
